<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context="com.jmajyo.adventure.MainActivity">

    <ImageView
        android:id="@+id/activity_main_scene_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/habitacionpostigos"/>

    <TextView
        android:id="@+id/activity_main_scene_text"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        tools:text="Hola hola"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:layout_below="@+id/activity_main_scene_image"/>

    <ImageButton
        android:id="@+id/activity_main_north_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/activity_main_scene_text"
        android:layout_toRightOf="@+id/activity_main_west_button"
        android:src="@drawable/arrow_up"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/activity_main_west_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/activity_main_north_button"
        android:src="@drawable/arrow_left"
        android:background="@android:color/transparent"/>
    <ImageButton
        android:id="@+id/activity_main_east_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/activity_main_north_button"
        android:layout_below="@id/activity_main_north_button"
        android:src="@drawable/arrow_right"
        android:background="@android:color/transparent"
        />
    <ImageButton
        android:id="@+id/activity_main_look_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/activity_main_west_button"
        android:layout_below="@id/activity_main_north_button"
        android:src="@drawable/look"
        android:background="@android:color/transparent"/>
    <ImageButton
        android:id="@+id/activity_main_south_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/activity_main_west_button"
        android:layout_toRightOf="@id/activity_main_west_button"
        android:src="@drawable/arrow_down"
        android:background="@android:color/transparent"/>
    <ImageButton
        android:id="@+id/activity_main_inventory"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/activity_main_scene_text"
        android:layout_alignParentRight="true"
        android:src="@drawable/inventory"
        style="@style/main_screen_button_style" />
    <ImageButton
        android:id="@+id/activity_main_take_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/activity_main_inventory"
        android:layout_alignParentRight="true"
        android:src="@drawable/take"
        android:background="@android:color/transparent"/>
    <ImageButton
        android:id="@+id/activity_main_drop_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/activity_main_take_button"
        android:layout_alignParentRight="true"
        android:src="@drawable/drop"
        android:background="@android:color/transparent"/>
    <ImageButton
        android:id="@+id/activity_main_help_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/activity_main_drop_button"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/ic_menu_help"
        android:background="@android:color/transparent"/>


    <!--Si pones tools:text solo lo veras en la vista de desarrollo en el aplicación no saldrá-->


</RelativeLayout>
